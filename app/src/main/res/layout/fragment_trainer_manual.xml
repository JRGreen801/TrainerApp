<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.TrainerManualFragment" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/training_manual_dropButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/training_manual_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:paddingLeft="6dp"
                android:text="Trainingsplan"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/training_manual_dropImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/training_manual_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schicht 1:\nDu nimmst den Trainee beim Be- und Entladevorgang mit, auf dem Trip zeigst du ihm was deine Abl채ufe sind.\n\nDein Trainee f채hrt den R체ckweg zum Hub\n\nSchicht 2:\n..." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_manual_dropButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topic_manual_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:paddingLeft="6dp"
                android:text="Kategorien"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/topic_manual_dropImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topic_manual_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hubflow:\nZeige deinem Trainee wie du dich auf die Schicht vorbereitest inkl. Runner-Outfit, EPV und Frames nach Tripsheet/Device raussuchen, an den Loadingtable fahren, etc.\n\nFahrverhalten:\n..." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_manual_dropButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_manual_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:paddingLeft="6dp"
                android:text="Details"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/detail_manual_dropImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_manual_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Order:\nDies ist ein beschreibender Text mit Abs채tzen\n\nUm zu Testen wie das ganze Aussieht und ob man das so machen kann\n\nSplit-Tote:\n..." />
        </LinearLayout>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>